{
  "manifest_version": 3,
  "name": "ChatGPT & Gemini Clutter Remover",
  "version": "1.2",
  "description": "Removes headers/disclaimers on ChatGPT and Gemini. Popup toggle to keep ChatGPT header.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "action": {
    "default_title": "ChatGPT & Gemini Clutter Remover",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon_128.png"
  }
}
